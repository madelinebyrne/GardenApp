<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="madelinebyrne.gardenapp.MainActivityTest">

    <EditText
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Common Name"
        android:id="@+id/editText"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_test"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main_test"
        android:layout_marginTop="16dp" />.

    <EditText
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:hint="Genus"
        android:ems="10"
        android:id="@+id/editText2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_test"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:hint="Species"
        android:ems="10"
        android:id="@+id/editText3"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_test"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginTop="56dp" />

    <Button
        android:text="Evergreen"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="evergreenClick"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_test"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText3"
        android:layout_marginTop="8dp" />

    <Button
        android:text="Deciduous"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="deciduousClick"
        app:layout_constraintLeft_toRightOf="@+id/button"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="@+id/button" />

    <Button

        android:layout_width="177dp"
        android:layout_height="94dp"
        android:id="@+id/button3"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_test"
        app:layout_constraintRight_toRightOf="@+id/activity_main_test"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_test"
        android:layout_marginBottom="16dp"
        android:onClick="inputUser"/>

</android.support.constraint.ConstraintLayout>

